<Controls:MetroWindow
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls" x:Class="XboxOn.Tray.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XboxOn.Tray"
        mc:Ignorable="d" ResizeMode="NoResize" WindowStyle="ToolWindow"
        Title="Xbox On - Settings" Height="156" Width="230" Closing="Settings_Closing" Loaded="Settings_Loaded">
    
    <StackPanel Margin="4,4">
        <!--<ComboBox x:Name="ThemeCombo" SelectionChanged="ThemeCombo_SelectionChanged" >
            <ComboBoxItem Content="Light Theme"/>
            <ComboBoxItem Content="Dark Theme"/>
        </ComboBox>-->
        <CheckBox x:Name="LaunchMinimized" Margin="0,4" Content="Launch minimized" Checked="LaunchMinimized_Checked" Unchecked="LaunchMinimized_Unchecked"/>
        <TextBlock Text="Xbox Console IP"/>
        <TextBox x:Name="IPTxt"/>
        <TextBlock Margin="0,4,0,0" Text="Xbox Console Live ID"/>
        <TextBox x:Name="LiveIdTxt"/>
    </StackPanel>
</Controls:MetroWindow>
