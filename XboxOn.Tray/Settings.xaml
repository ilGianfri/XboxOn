<Window x:Class="XboxOn.Tray.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XboxOn.Tray"
        mc:Ignorable="d" ResizeMode="NoResize" WindowStyle="ToolWindow"
        Title="Xbox On - Settings" Height="150" Width="200" Closing="Settings_Closing" Loaded="Settings_Loaded">
    
    <StackPanel Margin="4,0">
        <TextBlock Text="Xbox Console IP"/>
        <TextBox x:Name="IPTxt"/>
        <TextBlock Text="Xbox Console Live ID"/>
        <TextBox x:Name="LiveIdTxt"/>
    </StackPanel>
</Window>
